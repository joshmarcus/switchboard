- page_title @list.name

- content_for :main_box_content do

  %p What do you want to do?
  
  #vertical_menu
    %p= link_to 'Send a message', new_list_message_path(@list)
    %p= link_to 'Show subscribers', list_phone_numbers_path(@list)
    %p= link_to 'Add a contact', new_list_contact_path(@list)
    %p= link_to 'Import contacts', import_list_path(@list)
    %p= link_to 'Change list settings', edit_list_path(@list)
    %p= link_to 'Manage surveys', "/surveys"
    %p= link_to 'Delete list', list_path(@list), method: :delete, confirm: "Are you sure you want to permanently delete the list #{@list.name}?"

  %br   

  %h4 LIST STATISTICS
  %p

  %p
    Incoming number: #{format_phone(@list.incoming_number)}
    %br
    Contacts: #{@list.phone_numbers.size}
    %br
    Total messages: #{@list.messages.size}
    %br
    Messages this week: #{@list.messages.within_days(7).size}
    %br
    Sent messages: #{@list.messages.in_state(4).size}

